<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Registro - Farmacia</title>
  <style> body { margin: 0; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background: linear-gradient(135deg, #28df99, #00bcd4); display: flex; justify-content: center; align-items: center; height: 100vh; color: #333; } .register-container { background-color: #ffffff; padding: 2.5rem; border-radius: 20px; box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2); width: 100%; max-width: 450px; animation: fadeIn 0.8s ease-in-out; } @keyframes fadeIn { from { opacity: 0; transform: scale(0.95); } to { opacity: 1; transform: scale(1); } } .register-container h2 { text-align: center; margin-bottom: 2rem; color: #00b894; font-size: 1.8rem; letter-spacing: 1px; } .form-group { margin-bottom: 1.3rem; } .form-group label { display: block; margin-bottom: 0.5rem; font-weight: bold; color: #34495e; } .form-group input { width: 100%; padding: 0.75rem; border: 2px solid #00cec9; border-radius: 8px; font-size: 1rem; outline: none; transition: border-color 0.3s; } .form-group input:focus { border-color: #0984e3; } .form-group button { width: 100%; padding: 0.9rem; background-color: #00b894; color: #fff; border: none; border-radius: 8px; font-size: 1.1rem; font-weight: bold; cursor: pointer; transition: background-color 0.3s ease; } .form-group button:hover { background-color: #019875; } .form-footer { text-align: center; margin-top: 1rem; font-size: 0.95rem; } .form-footer a { color: #0984e3; text-decoration: none; font-weight: bold; } .form-footer a:hover { text-decoration: underline; }  </style>
    <style>
      .password-toggle {
  position: absolute;
  right: 10px;
  top: 50%;
  transform: translateY(-50%);
  cursor: pointer;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  transition: filter 0.2s;
}
.password-toggle:hover {
  filter: brightness(1.2);
}
.form-group {
  position: relative;
  margin-bottom: 1.3rem;
}
      </style>  
</head>
<body>

  <div class="register-container">
    <h2>Crear Cuenta en Farmacia Plus</h2>
    <form action="/registro" method="POST" onsubmit="return validarFormulario()">
      <div class="form-group">
        <label for="name">Nombre Completo</label>
        <input type="text" id="name" name="nombre" required maxlength="50" />
      </div>

      <div class="form-group">
        <label for="usuario">Correo Electrónico o Teléfono</label>
        <input type="text" id="usuario" name="usuario" required maxlength="50" placeholder="Correo electrónico o teléfono" />
      </div>

      <div class="form-group">
        <label for="password">Contraseña</label>
        <input type="password" id="password" name="contra" required maxlength="50" />
      </div>

      <div class="form-group">
        <label for="confirmPassword">Confirmar Contraseña</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required maxlength="50" />
      </div>

      <div class="form-group">
        <button type="submit">Registrarse</button>
      </div>
    </form>
    <div class="form-footer">
      <p>¿Ya tienes una cuenta? <a href="/sesion">Inicia sesión</a></p>
    </div>
  </div>

  <script>
  function validarFormulario() {
    const nombre = document.getElementById('name').value.trim();
    const usuario = document.getElementById('usuario').value.trim();
    const password = document.getElementById('password').value.trim();
    const confirmPassword = document.getElementById('confirmPassword').value.trim();

    // Validar longitud máxima 50 caracteres
    if (nombre.length > 50) {
      alert('El nombre no puede tener más de 50 caracteres.');
      return false;
    }
    if (usuario.length > 50) {
      alert('El correo o teléfono no puede tener más de 50 caracteres.');
      return false;
    }
    if (password.length > 50) {
      alert('La contraseña no puede tener más de 50 caracteres.');
      return false;
    }

    // Validar que usuario sea correo o teléfono válido
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    const telefonoRegex = /^\d{10,15}$/;

    if (!emailRegex.test(usuario) && !telefonoRegex.test(usuario)) {
      alert('Por favor ingresa un correo electrónico válido o un número telefónico válido (solo dígitos, entre 10 y 15 números).');
      return false;
    }

    // Validar contraseñas coinciden
    if (password !== confirmPassword) {
      alert('Las contraseñas no coinciden.');
      return false;
    }

    return true;
  }

  // Mostrar/ocultar contraseña con canvas mejorado
  function drawEye(canvas, closed = false) {
    const ctx = canvas.getContext('2d');
    ctx.clearRect(0, 0, 40, 40);

    // Ojo base
    ctx.strokeStyle = '#00b894';
    ctx.lineWidth = 3;
    ctx.beginPath();
    ctx.ellipse(20, 20, 15, 9, 0, 0, 2 * Math.PI);
    ctx.stroke();

    // Pupila
    ctx.beginPath();
    ctx.arc(20, 20, 5, 0, 2 * Math.PI);
    ctx.fillStyle = '#00b894';
    ctx.fill();

    // Línea de cerrado
    if (closed) {
      ctx.strokeStyle = '#e17055';
      ctx.lineWidth = 3;
      ctx.beginPath();
      ctx.moveTo(10, 30);
      ctx.lineTo(30, 10);
      ctx.stroke();
    }
  }

  document.querySelectorAll('input[type="password"]').forEach(input => {
    // Evitar duplicados
    if (input.parentNode.querySelector('.password-toggle')) return;

    const canvas = document.createElement('canvas');
    canvas.width = 40;
    canvas.height = 40;
    canvas.className = 'password-toggle';
    drawEye(canvas, false);

    input.parentNode.appendChild(canvas);

    let isVisible = false;
    canvas.addEventListener('click', () => {
      isVisible = !isVisible;
      input.type = isVisible ? 'text' : 'password';
      drawEye(canvas, isVisible);
    });
  });

  // Validación en tiempo real
  document.getElementById('usuario').addEventListener('input', function() {
    const usuario = this.value.trim();
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    const telefonoRegex = /^\d{10,15}$/;
    this.style.borderColor = (emailRegex.test(usuario) || telefonoRegex.test(usuario)) ? '#00b894' : '#e17055';
  });

  document.getElementById('confirmPassword').addEventListener('input', function() {
    const password = document.getElementById('password').value.trim();
    this.style.borderColor = (this.value.trim() === password) ? '#00b894' : '#e17055';
  });

  // Animación de botón al hacer hover
  const btn = document.querySelector('.form-group button');
  btn.addEventListener('mouseenter', () => {
    btn.style.transform = 'scale(1.05)';
    btn.style.boxShadow = '0 4px 16px rgba(0,184,148,0.2)';
  });
  btn.addEventListener('mouseleave', () => {
    btn.style.transform = 'scale(1)';
    btn.style.boxShadow = 'none';
  });

  // Animación de entrada para los campos del formulario
  document.querySelectorAll('.form-group').forEach((el, i) => {
    el.style.opacity = 0;
    el.style.transform = 'translateY(30px)';
    setTimeout(() => {
      el.style.transition = 'all 0.6s cubic-bezier(.68,-0.55,.27,1.55)';
      el.style.opacity = 1;
      el.style.transform = 'translateY(0)';
    }, 200 + i * 120);
  });
</script>
</body>
</html>
