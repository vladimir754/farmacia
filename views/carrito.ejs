<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Carrito de Compras | Farmacia Salud Total</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f4;
      margin: 0;
      padding: 0;
    }
    body.dark {
      background-color: #121212;
      color: #f1f1f1;
    }
    header {
      background: #00796b;
      color: white;
      padding: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .logo {
      font-size: 1.5em;
      font-weight: bold;
    }
    .container {
      max-width: 1000px;
      margin: 30px auto;
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      opacity: 0;
      transform: translateY(40px);
      transition: all 0.7s cubic-bezier(.68,-0.55,.27,1.55);
    }
    .container.visible {
      opacity: 1;
      transform: translateY(0);
    }
    h2 {
      margin-bottom: 20px;
      color: #333;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }
    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
      vertical-align: middle;
    }
    th {
      background-color: #e0f2f1;
    }
    td img {
      width: 50px;
      height: 50px;
      object-fit: contain;
      margin-right: 10px;
      vertical-align: middle;
    }
    .actions button {
      background: #e53935;
      color: white;
      border: none;
      padding: 5px 10px;
      border-radius: 5px;
      cursor: pointer;
      transition: background 0.3s ease;
    }
    .actions button:hover {
      background: #b71c1c;
    }
    input.cantidad-input {
      width: 60px;
      padding: 5px;
      font-size: 1em;
      border-radius: 5px;
      border: 1px solid #ccc;
      text-align: center;
    }
    .total {
      text-align: right;
      font-size: 1.2em;
      font-weight: bold;
      margin-top: 10px;
    }
    .checkout {
      text-align: right;
      margin-top: 20px;
    }
    .checkout button {
      background: #00796b;
      color: white;
      padding: 10px 20px;
      font-size: 1em;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: transform 0.3s, box-shadow 0.3s;
    }
    .checkout button:hover {
      transform: scale(1.05);
      box-shadow: 0 4px 16px rgba(0,121,107,0.13);
    }
    footer {
      background: #004d40;
      color: white;
      text-align: center;
      padding: 20px;
      margin-top: 40px;
    }
    /* Notificación para producto agregado o eliminado */
    .notif {
      position: fixed;
      top: 20px;
      right: 20px;
      background: #00796b;
      color: white;
      padding: 10px 20px;
      border-radius: 12px;
      opacity: 0;
      transition: opacity 0.4s ease;
      z-index: 9999;
      font-weight: bold;
      box-shadow: 0 4px 12px rgba(0,121,107,0.4);
    }
  </style>
</head>
<body>
  <header>
    <div class="logo">Farmacia Salud Total</div>
    <div class="icons">
      <a href="/menu" style="color: white; margin-right: 20px;"><i class="fas fa-home"></i> Inicio</a>
      <a href="/perfil"><i class="fas fa-user" style="color: white; margin-right: 15px;"></i></a>
      <a href="/carrito"><i class="fas fa-shopping-cart" style="color: white;"></i></a>
    </div>
  </header>

  <div class="container" id="container">
    <h2>Carrito de Compras</h2>
    <table>
      <thead>
        <tr>
          <th>Producto</th>
          <th>Precio</th>
          <th>Cantidad</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody id="tabla-carrito-body">
        <!-- Aquí se insertan productos dinámicamente -->
      </tbody>
    </table>

    <div class="total" id="total">$0.00</div>

    <div class="checkout">
      <button id="vaciar-carrito" style="background:#e53935; margin-right: 15px;">Vaciar carrito</button>
      <button id="btn-pago">Proceder al Pago</button>
    </div>
  </div>

  <footer>
    <p>&copy; 2025 Farmacia Salud Total | Tel. 55 1234 5678 | contacto@saludtotal.com.mx</p>
  </footer>

<script>
    // Aplicar modo oscuro o claro según localStorage
  window.addEventListener('DOMContentLoaded', () => {
    const modoGuardado = localStorage.getItem('modoOscuro');
    if (modoGuardado === 'true') {
      document.body.classList.add('dark');
    } else {
      document.body.classList.remove('dark');
    }
    });




  // Animación contenedor
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('container');
    setTimeout(() => {
      container.classList.add('visible');
    }, 200);
  });

  // Mostrar notificaciones
  function mostrarNotificacion(mensaje) {
    const notif = document.createElement('div');
    notif.className = 'notif';
    notif.textContent = mensaje;
    document.body.appendChild(notif);
    setTimeout(() => {
      notif.style.opacity = '1';
    }, 10);
    setTimeout(() => {
      notif.style.opacity = '0';
      setTimeout(() => notif.remove(), 400);
    }, 2000);
  }

  // Obtener carrito del localStorage
  function obtenerCarrito() {
    return JSON.parse(localStorage.getItem('carrito')) || [];
  }

  // Guardar carrito en localStorage
  function guardarCarrito(carrito) {
    localStorage.setItem('carrito', JSON.stringify(carrito));
  }

  // Renderizar carrito en tabla
  function renderizarCarrito() {
    const carrito = obtenerCarrito();
    const tbody = document.getElementById('tabla-carrito-body');
    tbody.innerHTML = '';

    if(carrito.length === 0) {
      tbody.innerHTML = '<tr><td colspan="5" style="text-align:center;">Tu carrito está vacío.</td></tr>';
      document.getElementById('total').textContent = '$0.00';
      return;
    }

    let total = 0;
    carrito.forEach((item, index) => {
      const subtotal = item.precio * item.cantidad;
      total += subtotal;

      const tr = document.createElement('tr');
      tr.innerHTML = `
        
        <td>$${item.precio.toFixed(2)}</td>
        <td>
          <input type="number" min="1" value="${item.cantidad}" class="cantidad-input" data-index="${index}" />
        </td>
        <td>$${subtotal.toFixed(2)}</td>
        <td class="actions">
          <button data-index="${index}" class="btn-eliminar" title="Eliminar producto">
            <i class="fas fa-trash"></i>
          </button>
        </td>
      `;
      tbody.appendChild(tr);
    });

    document.getElementById('total').textContent = `Total: $${total.toFixed(2)}`;

    // Event listeners para input cantidad
    document.querySelectorAll('.cantidad-input').forEach(input => {
      input.addEventListener('change', e => {
        let val = parseInt(e.target.value);
        if (isNaN(val) || val < 1) val = 1;
        const idx = e.target.getAttribute('data-index');
        const carrito = obtenerCarrito();
        carrito[idx].cantidad = val;
        guardarCarrito(carrito);
        renderizarCarrito();
      });
    });

    // Event listeners para eliminar producto
    document.querySelectorAll('.btn-eliminar').forEach(btn => {
      btn.addEventListener('click', e => {
        const idx = e.currentTarget.getAttribute('data-index');
        const carrito = obtenerCarrito();

        // Animación eliminar con canvas
        const td = btn.closest('td');
        const canvas = document.createElement('canvas');
        canvas.width = 50;
        canvas.height = 50;
        canvas.style.position = 'absolute';
        canvas.style.left = btn.offsetLeft + 'px';
        canvas.style.top = btn.offsetTop + 'px';
        td.style.position = 'relative';
        td.appendChild(canvas);

        const ctx = canvas.getContext('2d');
        ctx.strokeStyle = '#e53935';
        ctx.lineWidth = 5;
        let progress = 0;
        function animateX() {
          ctx.clearRect(0, 0, 50, 50);
          ctx.beginPath();
          ctx.moveTo(10, 10);
          ctx.lineTo(10 + 30 * progress, 10 + 30 * progress);
          ctx.stroke();
          ctx.beginPath();
          ctx.moveTo(40, 10);
          ctx.lineTo(40 - 30 * progress, 10 + 30 * progress);
          ctx.stroke();
          if (progress < 1) {
            progress += 0.08;
            requestAnimationFrame(animateX);
          } else {
            setTimeout(() => {
              canvas.remove();
              carrito.splice(idx, 1);
              guardarCarrito(carrito);
              renderizarCarrito();
              mostrarNotificacion('Producto eliminado del carrito');
            }, 350);
          }
        }
        animateX();
      });
    });
  }

  // Vaciar carrito
  document.getElementById('vaciar-carrito').addEventListener('click', () => {
    if(confirm('¿Seguro que deseas vaciar el carrito?')) {
      localStorage.removeItem('carrito');
      renderizarCarrito();
      mostrarNotificacion('Carrito vaciado');
    }
  });

  // Animación y notificación al proceder al pago
  document.getElementById('btn-pago').addEventListener('click', e => {
    e.preventDefault();
    if(obtenerCarrito().length === 0) {
      alert('Tu carrito está vacío.');
      return;
    }
    const notif = document.createElement('canvas');
    notif.width = 260;
    notif.height = 60;
    notif.style.position = 'fixed';
    notif.style.top = '30px';
    notif.style.right = '30px';
    notif.style.zIndex = 9999;
    notif.style.boxShadow = '0 4px 16px rgba(0,0,0,0.15)';
    notif.style.borderRadius = '12px';
    document.body.appendChild(notif);

    const ctx = notif.getContext('2d');
    // Fondo
    ctx.fillStyle = '#00796b';
    ctx.strokeStyle = '#fff';
    ctx.lineWidth = 2;
    ctx.beginPath();
    if(ctx.roundRect) {
      ctx.roundRect(0, 0, 260, 60, 12);
    } else {
      // fallback simple rect
      ctx.rect(0, 0, 260, 60);
    }
    ctx.fill();
    ctx.stroke();

    // Dibuja check animado
    ctx.strokeStyle = '#fff';
    ctx.lineWidth = 5;
    let progress = 0;
    function animateCheck() {
      ctx.clearRect(80, 20, 40, 30);
      ctx.beginPath();
      ctx.moveTo(90, 40);
      ctx.lineTo(100, 50 - 10 * (1 - progress));
      ctx.lineTo(120, 30 + 10 * progress);
      ctx.stroke();
      if (progress < 1) {
        progress += 0.08;
        requestAnimationFrame(animateCheck);
      }
    }
    animateCheck();

    // Texto
    ctx.font = 'bold 18px Arial';
    ctx.fillStyle = '#fff';
    ctx.fillText('¡Pago realizado!', 140, 38);

    setTimeout(() => notif.remove(), 1800);

    // Aquí podrías limpiar carrito si quieres:
    // localStorage.removeItem('carrito');
    // renderizarCarrito();
  });

  // Inicializar carrito en carga
  document.addEventListener('DOMContentLoaded', renderizarCarrito);
</script>
</body>
</html>
