<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Farmacia Salud Total</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background: #f4f4f4;
    }
    header {
      background: #00796b;
      color: white;
      padding: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .logo {
      font-size: 1.5em;
      font-weight: bold;
    }
    .search-bar input {
      padding: 8px;
      width: 250px;
      border-radius: 5px;
      border: none;
    }
    nav {
      background: #004d40;
      padding: 10px;
      display: flex;
      justify-content: center;
      gap: 15px;
    }
    nav a {
      color: white;
      text-decoration: none;
      font-weight: bold;
    }
    .container {
      max-width: 1200px;
      margin: auto;
      padding: 20px;
    }
    .category-list {
      margin-bottom: 20px;
    }
    .category-list h2 {
      margin-bottom: 10px;
    }
    .category-list ul {
      list-style: none;
      padding: 0;
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
    }
    .category-list li {
      background: #e0f2f1;
      padding: 10px 15px;
      border-radius: 5px;
      cursor: pointer;
    }
    .product-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
    }
    .product {
      background: white;
      border-radius: 10px;
      padding: 15px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      text-align: center;
    }
    .product img {
      width: 100px;
      height: 100px;
      object-fit: contain;
    }
    .product h3 {
      margin: 10px 0 5px;
    }
    .product p {
      margin: 5px 0;
      font-size: 14px;
    }
    .product button {
      background: #00796b;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 5px;
      cursor: pointer;
    }
    footer {
      background: #004d40;
      color: white;
      text-align: center;
      padding: 20px;
      margin-top: 40px;
    }
  </style>
</head>
<body>
  <header>
    <div class="logo">Farmacia Salud Total</div>
    <div class="search-bar">
      <input type="text" placeholder="Buscar medicamentos, vitaminas...">
    </div>
    <div class="icons">
      <a href="/perfil"><i class="fas fa-user" style="color: white; margin-right: 15px;"></i></a>
      <a href="/carrito"><i class="fas fa-shopping-cart" style="color: white;"></i></a>
    </div>
  </header>

  <nav>
    <a href="#">Medicamentos</a>
    <a href="#">Vitaminas</a>
    <a href="#">Cuidado personal</a>
    <a href="#">Promociones</a>
    <a href="/contacto">Contacto</a>
  </nav>

  <div class="container">
    <section class="category-list">
      <h2>Categor√≠as</h2>
      <ul>
        <li>Analg√©sicos</li>
        <li>Antibi√≥ticos</li>
        <li>Antigripales</li>
        <li>Antiinflamatorios</li>
        <li>Vitaminas</li>
        <li>Suplementos</li>
      </ul>
    </section>

  <footer>
    <p>&copy; 2025 Farmacia Salud Total | Tel. 72 9805 4028 | contacto@saludtotal.com.mx</p>
  </footer>
  <script>
  // Filtro de b√∫squeda en categor√≠as y productos
  document.querySelector('.search-bar input').addEventListener('input', function() {
    const query = this.value.toLowerCase();
    // Filtrar categor√≠as
    document.querySelectorAll('.category-list li').forEach(li => {
      li.style.display = li.textContent.toLowerCase().includes(query) ? '' : 'none';
    });
    // Filtrar productos (si tienes productos din√°micos)
    document.querySelectorAll('.product').forEach(prod => {
      prod.style.display = prod.textContent.toLowerCase().includes(query) ? '' : 'none';
    });
  });

  // Animaci√≥n de hover en productos y categor√≠as
  document.querySelectorAll('.product').forEach(prod => {
    prod.addEventListener('mouseenter', () => {
      prod.style.transform = 'scale(1.04)';
      prod.style.boxShadow = '0 8px 24px rgba(0,0,0,0.13)';
    });
    prod.addEventListener('mouseleave', () => {
      prod.style.transform = 'scale(1)';
      prod.style.boxShadow = '0 2px 5px rgba(0,0,0,0.1)';
    });
  });
  document.querySelectorAll('.category-list li').forEach(cat => {
    cat.addEventListener('mouseenter', () => {
      cat.style.background = '#b2dfdb';
      cat.style.transform = 'scale(1.07)';
    });
    cat.addEventListener('mouseleave', () => {
      cat.style.background = '#e0f2f1';
      cat.style.transform = 'scale(1)';
    });
    // Scroll suave a productos de la categor√≠a (si existieran)
    cat.addEventListener('click', () => {
      window.scrollTo({ top: document.querySelector('.product-grid')?.offsetTop || 0, behavior: 'smooth' });
    });
  });

  // Notificaci√≥n al agregar al carrito (simulada)
  document.querySelectorAll('.product button').forEach(btn => {
    btn.addEventListener('click', e => {
      e.preventDefault();
      const notif = document.createElement('div');
      notif.textContent = '¬°Producto agregado al carrito!';
      notif.style.position = 'fixed';
      notif.style.top = '30px';
      notif.style.right = '30px';
      notif.style.background = '#00b894';
      notif.style.color = '#fff';
      notif.style.padding = '15px 25px';
      notif.style.borderRadius = '8px';
      notif.style.boxShadow = '0 4px 16px rgba(0,0,0,0.15)';
      notif.style.zIndex = 9999;
      notif.style.fontWeight = 'bold';
      document.body.appendChild(notif);
      setTimeout(() => notif.remove(), 1700);
    });
  });

  // Modo oscuro
  const darkBtn = document.createElement('button');
  darkBtn.textContent = 'üåô';
  darkBtn.title = 'Modo oscuro';
  darkBtn.style.background = 'none';
  darkBtn.style.border = 'none';
  darkBtn.style.fontSize = '1.5em';
  darkBtn.style.cursor = 'pointer';
  darkBtn.style.marginLeft = '10px';
  document.querySelector('.icons').appendChild(darkBtn);

  let dark = false;
  darkBtn.addEventListener('click', () => {
    dark = !dark;
    document.body.style.background = dark ? '#222' : '#f4f4f4';
    document.querySelector('header').style.background = dark ? '#222' : '#00796b';
    document.querySelector('nav').style.background = dark ? '#111' : '#004d40';
    document.querySelector('footer').style.background = dark ? '#111' : '#004d40';
    document.querySelectorAll('.product').forEach(p => p.style.background = dark ? '#333' : '#fff');
    document.querySelectorAll('.category-list li').forEach(li => li.style.background = dark ? '#263238' : '#e0f2f1');
    document.querySelectorAll('.product, .category-list li').forEach(el => el.style.color = dark ? '#fff' : '#333');
    document.querySelectorAll('.logo, .icons a, .form-footer, nav a, footer').forEach(el => el.style.color = dark ? '#fff' : '');
    darkBtn.textContent = dark ? '‚òÄÔ∏è' : 'üåô';
  });
</script>
</body>
</html>
