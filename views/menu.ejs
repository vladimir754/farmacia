  <script>
    // Filtro de b√∫squeda en categor√≠as y productos
    document.getElementById('buscador').addEventListener('input', function() {
      const query = this.value.toLowerCase();
      document.querySelectorAll('.category-list li').forEach(li => {
        li.style.display = li.textContent.toLowerCase().includes(query) ? '' : 'none';
      });
      document.querySelectorAll('.product').forEach(prod => {
        prod.style.display = prod.textContent.toLowerCase().includes(query) ? '' : 'none';
      });
    });

    // Animaci√≥n de hover en productos y categor√≠as
    document.querySelectorAll('.product').forEach(prod => {
      prod.addEventListener('mouseenter', () => {
        prod.style.transform = 'scale(1.04)';
        prod.style.boxShadow = '0 8px 24px rgba(0,184,148,0.13)';
      });
      prod.addEventListener('mouseleave', () => {
        prod.style.transform = 'scale(1)';
        prod.style.boxShadow = '0 2px 5px rgba(0,0,0,0.1)';
      });
    });
    document.querySelectorAll('.category-list li').forEach(cat => {
      cat.addEventListener('mouseenter', () => {
        cat.classList.add('active');
      });
      cat.addEventListener('mouseleave', () => {
        cat.classList.remove('active');
      });
      cat.addEventListener('click', () => {
        document.querySelectorAll('.category-list li').forEach(li => li.classList.remove('active'));
        cat.classList.add('active');
        const grid = document.getElementById(cat.dataset.cat);
        if (grid) {
          window.scrollTo({ top: grid.offsetTop - 20, behavior: 'smooth' });
        }
      });
    });

    // Notificaci√≥n al agregar al carrito (simulada)
    document.querySelectorAll('.product button').forEach(btn => {
      btn.addEventListener('click', e => {
        e.preventDefault();
        const notif = document.createElement('div');
        notif.className = 'notif';
        notif.textContent = '¬°Producto agregado al carrito!';
        document.body.appendChild(notif);
        setTimeout(() => notif.remove(), 1700);
      });
    });

