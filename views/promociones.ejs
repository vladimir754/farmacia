<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Promociones | Farmacia Salud Total</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f2f2f2;
      color: #333;
      transition: background 0.3s, color 0.3s;
    }
    body.dark {
      background-color: #121212;
      color: #f1f1f1;
    }
    header {
      background-color: #008080;
      padding: 15px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      color: white;
    }
    .logo {
      font-size: 1.5em;
      font-weight: bold;
    }
    nav {
      background-color: #006666;
      padding: 10px;
    }
    nav a {
      color: white;
      margin-right: 15px;
      text-decoration: none;
    }
    nav a:hover {
      text-decoration: underline;
    }
    .container {
      padding: 20px;
    }
    .product-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }
    .product {
      background: white;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      transition: transform 0.3s, box-shadow 0.3s;
    }
    body.dark .product {
      background: #1e1e1e;
    }
    .product img {
      width: 100%;
      height: 160px;
      object-fit: contain;
    }
    .product h3 {
      margin: 10px 0 5px;
    }
    .product p {
      margin: 5px 0;
      font-size: 0.95em;
    }
    .product button {
      background-color: #008080;
      color: white;
      border: none;
      padding: 10px;
      width: 100%;
      border-radius: 5px;
      cursor: pointer;
      margin-top: 10px;
    }
    .product button:hover {
      background-color: #006666;
    }
    .notif {
      position: fixed;
      top: 20px;
      right: 20px;
      background: #4caf50;
      color: white;
      padding: 10px 20px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.3);
      z-index: 999;
    }
    footer {
      text-align: center;
      padding: 15px;
      background: #004d4d;
      color: white;
      margin-top: 40px;
    }
  </style>
</head>
<body>
  <header>
    <div class="logo">Farmacia Salud Total</div>
    <div>
      <a href="/menu" style="color:white; margin-right:15px;"><i class="fas fa-home"></i> Inicio</a>
    </div>
  </header>

  <div class="container">
    <h2 style="text-align: center;">🎉 Promociones Especiales</h2>
    <div class="product-grid" id="promo-container"></div>
  </div>

  <footer>
    <p>&copy; 2025 Farmacia Salud Total | contacto@saludtotal.com.mx</p>
  </footer>

  <script>
    // Aplicar modo oscuro o claro según localStorage
     // Aplicar modo oscuro o claro según localStorage
  window.addEventListener('DOMContentLoaded', () => {
    const modoGuardado = localStorage.getItem('modoOscuro');
    if (modoGuardado === 'true') {
      document.body.classList.add('dark');
    } else {
      document.body.classList.remove('dark');
    }
    });

    const promociones = [
      {
        nombre: "Redoxon + 10% Gratis",
        desc: "Vitamina C + D para inmunidad reforzada",
        cientifico: "Ácido ascórbico, Colecalciferol",
        tipo: "Vitaminas",
        precio: "$36.00",
       
      },
      {
        nombre: "Tabcin Duo Pack",
        desc: "2 cajas al precio de 1.5",
        cientifico: "Paracetamol, Fenilefrina, Clorfenamina",
        tipo: "Antigripales",
        precio: "$55.00",
       
      },
      {
        nombre: "Ensure Familiar",
        desc: "Descuento del 20% en segundo envase",
        cientifico: "Suplemento nutricional",
        tipo: "Suplementos",
        precio: "$140.00",
      
      }
    ];

    const promoContainer = document.getElementById('promo-container');

    promociones.forEach(promo => {
      const div = document.createElement('div');
      div.className = 'product';
      div.innerHTML = `
        
        <h3>${promo.nombre}</h3>
        <p><strong>Nombre científico:</strong> ${promo.cientifico}</p>
        <p>${promo.desc}</p>
        <p><strong>Tipo:</strong> ${promo.tipo}</p>
        <p><strong>Precio:</strong> ${promo.precio}</p>
        <button>Agregar al carrito</button>
      `;
      promoContainer.appendChild(div);
    });

    document.querySelectorAll('.product button').forEach(btn => {
      btn.addEventListener('click', e => {
        e.preventDefault();
        const notif = document.createElement('div');
        notif.className = 'notif';
        notif.textContent = '¡Promoción agregada al carrito!';
        document.body.appendChild(notif);
        setTimeout(() => notif.remove(), 1700);
      });
    });

    // Animación entrada y hover
    document.querySelectorAll('.product').forEach((prod, i) => {
      prod.style.opacity = 0;
      prod.style.transform = 'translateY(30px)';
      setTimeout(() => {
        prod.style.transition = 'all 0.6s ease';
        prod.style.opacity = 1;
        prod.style.transform = 'translateY(0)';
      }, 100 + i * 80);

      prod.addEventListener('mouseenter', () => {
        prod.style.transform = 'scale(1.04)';
        prod.style.boxShadow = '0 8px 24px rgba(0,184,148,0.2)';
      });
      prod.addEventListener('mouseleave', () => {
        prod.style.transform = 'scale(1)';
        prod.style.boxShadow = '0 2px 5px rgba(0,0,0,0.1)';
      });
    });
  </script>
</body>
</html>